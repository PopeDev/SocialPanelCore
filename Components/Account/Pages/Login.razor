@page "/Account/Login"
@layout AccountLayout

@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Identity
@using SocialPanelCore.Data
@using SocialPanelCore.Components.Account.Shared

@inject NavigationManager NavigationManager
@inject SignInManager<User> SignInManager
@inject ILogger<Login> Logger
@inject IdentityRedirectManager RedirectManager

<PageTitle>Iniciar Sesión</PageTitle>

<div class="mud-paper mud-paper-outlined mud-elevation-4 pa-8" style="border-radius: 4px; background-color: var(--mud-palette-surface);">
    <div class="d-flex flex-column align-center mb-4">
        <span class="mud-icon-root mud-icon-size-large" style="color: var(--mud-palette-primary);">
            <svg class="mud-icon-root mud-svg-icon" focusable="false" viewBox="0 0 24 24" aria-hidden="true" style="width: 3rem; height: 3rem; fill: currentColor;">
                <path d="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zm-6 9c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2zm3.1-9H8.9V6c0-1.71 1.39-3.1 3.1-3.1 1.71 0 3.1 1.39 3.1 3.1v2z"></path>
            </svg>
        </span>
        <h4 class="mud-typography mud-typography-h4 mt-2">Iniciar Sesión</h4>
        <p class="mud-typography mud-typography-subtitle1" style="color: var(--mud-palette-text-secondary);">
            Ingresa con tu cuenta local
        </p>
    </div>

    <StatusMessage Message="@errorMessage" />

    <EditForm Model="Input" method="post" OnValidSubmit="LoginUser" FormName="login">
        <DataAnnotationsValidator />
        <input type="hidden" name="Input.ReturnUrl" value="@ReturnUrl" />

        <div class="mud-input-control mud-input-control-margin-dense mb-4">
            <label class="mud-input-label mud-input-label-animated mud-input-label-outlined mud-input-label-inputcontrol" for="email">
                Correo electrónico
            </label>
            <div class="mud-input mud-input-outlined mud-shrink">
                <InputText @bind-Value="Input.Email"
                           id="email"
                           name="Input.Email"
                           class="mud-input-slot mud-input-root mud-input-root-outlined"
                           autocomplete="username"
                           placeholder="correo@ejemplo.com" />
                <div class="mud-input-outlined-border"></div>
            </div>
            <ValidationMessage For="() => Input.Email" class="mud-input-helper-text mud-input-error" />
        </div>

        <div class="mud-input-control mud-input-control-margin-dense mb-4">
            <label class="mud-input-label mud-input-label-animated mud-input-label-outlined mud-input-label-inputcontrol" for="password">
                Contraseña
            </label>
            <div class="mud-input mud-input-outlined mud-shrink">
                <InputText @bind-Value="Input.Password"
                           id="password"
                           name="Input.Password"
                           type="password"
                           class="mud-input-slot mud-input-root mud-input-root-outlined"
                           autocomplete="current-password"
                           placeholder="Contraseña" />
                <div class="mud-input-outlined-border"></div>
            </div>
            <ValidationMessage For="() => Input.Password" class="mud-input-helper-text mud-input-error" />
        </div>

        <div class="mud-input-control-boolean-input mb-4">
            <label class="mud-checkbox">
                <InputCheckbox @bind-Value="Input.RememberMe"
                               name="Input.RememberMe"
                               class="mud-checkbox-input" />
                <span class="mud-checkbox-icons">
                    <svg class="mud-icon-root mud-svg-icon mud-icon-default mud-checkbox-icon-unchecked" focusable="false" viewBox="0 0 24 24">
                        <path d="M19 5v14H5V5h14m0-2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2z"></path>
                    </svg>
                    <svg class="mud-icon-root mud-svg-icon mud-primary-text mud-checkbox-icon-checked" focusable="false" viewBox="0 0 24 24">
                        <path d="M19 3H5c-1.11 0-2 .9-2 2v14c0 1.1.89 2 2 2h14c1.11 0 2-.9 2-2V5c0-1.1-.89-2-2-2zm-9 14l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"></path>
                    </svg>
                </span>
                <span class="mud-typography mud-typography-body1 ml-2">Recordarme</span>
            </label>
        </div>

        <button type="submit"
                class="mud-button-root mud-button mud-button-filled mud-button-filled-primary mud-button-filled-size-large mud-ripple mb-4"
                style="width: 100%;">
            <span class="mud-button-label">Iniciar Sesión</span>
        </button>

        <hr class="mud-divider mud-divider-fullwidth my-4" />

        <div class="d-flex flex-column align-center">
            <a href="Account/ForgotPassword" class="mud-typography mud-link mud-primary-text mud-link-underline-hover mud-typography-body2">
                ¿Olvidaste tu contraseña?
            </a>
            <a href="@(NavigationManager.GetUriWithQueryParameters("Account/Register", new Dictionary<string, object?> { ["ReturnUrl"] = ReturnUrl }))"
               class="mud-typography mud-link mud-primary-text mud-link-underline-hover mud-typography-body2 mt-2">
                ¿No tienes cuenta? Regístrate
            </a>
            <a href="Account/ResendEmailConfirmation" class="mud-typography mud-link mud-primary-text mud-link-underline-hover mud-typography-body2 mt-2">
                Reenviar confirmación de correo
            </a>
        </div>
    </EditForm>

    <hr class="mud-divider mud-divider-fullwidth my-4" />

    <div>
        <h6 class="mud-typography mud-typography-h6" style="text-align: center; margin-bottom: 0.5rem;">
            Iniciar sesión con otro servicio
        </h6>
        <ExternalLoginPicker />
    </div>
</div>

<style>
    .mud-input-slot {
        width: 100%;
        padding: 16.5px 14px;
        border: none;
        background: transparent;
        font-size: 1rem;
        font-family: inherit;
        outline: none;
    }

    .mud-input-outlined {
        position: relative;
        border-radius: 4px;
    }

    .mud-input-outlined-border {
        position: absolute;
        inset: 0;
        border: 1px solid rgba(0, 0, 0, 0.23);
        border-radius: 4px;
        pointer-events: none;
        transition: border-color 0.2s;
    }

    .mud-input-outlined:focus-within .mud-input-outlined-border {
        border: 2px solid var(--mud-palette-primary);
    }

    .mud-input-label {
        display: block;
        margin-bottom: 4px;
        font-size: 0.875rem;
        color: var(--mud-palette-text-secondary);
    }

    .mud-input-helper-text.mud-input-error {
        color: var(--mud-palette-error);
        font-size: 0.75rem;
        margin-top: 3px;
    }

    .mud-checkbox {
        display: inline-flex;
        align-items: center;
        cursor: pointer;
    }

    .mud-checkbox-input {
        position: absolute;
        opacity: 0;
        width: 0;
        height: 0;
    }

    .mud-checkbox-icons {
        display: inline-flex;
        width: 24px;
        height: 24px;
    }

    .mud-checkbox-icon-checked {
        display: none;
    }

    .mud-checkbox-input:checked ~ .mud-checkbox-icons .mud-checkbox-icon-unchecked {
        display: none;
    }

    .mud-checkbox-input:checked ~ .mud-checkbox-icons .mud-checkbox-icon-checked {
        display: block;
    }
</style>

@code {
    private string? errorMessage;

    [SupplyParameterFromForm]
    private InputModel Input { get; set; } = default!;

    [SupplyParameterFromQuery]
    private string? ReturnUrl { get; set; }

    [SupplyParameterFromQuery(Name = "error")]
    private string? Error { get; set; }

    protected override void OnInitialized()
    {
        Input ??= new();

        if (Error == "InvalidCredentials")
        {
            errorMessage = "Error: Correo electrónico o contraseña incorrectos.";
        }
        else if (Error == "LockedOut")
        {
            errorMessage = "Error: Tu cuenta está bloqueada. Intenta más tarde.";
        }
    }

    private async Task LoginUser()
    {
        var result = await SignInManager.PasswordSignInAsync(
            Input.Email,
            Input.Password,
            Input.RememberMe,
            lockoutOnFailure: false);

        if (result.Succeeded)
        {
            Logger.LogInformation("User {Email} logged in.", Input.Email);
            RedirectManager.RedirectTo(ReturnUrl);
        }
        else if (result.RequiresTwoFactor)
        {
            RedirectManager.RedirectTo(
                "Account/LoginWith2fa",
                new() { ["returnUrl"] = ReturnUrl, ["rememberMe"] = Input.RememberMe });
        }
        else if (result.IsLockedOut)
        {
            Logger.LogWarning("User {Email} account locked out.", Input.Email);
            RedirectManager.RedirectTo("Account/Lockout");
        }
        else
        {
            errorMessage = "Error: Correo electrónico o contraseña incorrectos.";
        }
    }

    private sealed class InputModel
    {
        [Required(ErrorMessage = "El correo electrónico es obligatorio")]
        [EmailAddress(ErrorMessage = "El correo electrónico no es válido")]
        public string Email { get; set; } = "";

        [Required(ErrorMessage = "La contraseña es obligatoria")]
        [DataType(DataType.Password)]
        public string Password { get; set; } = "";

        [Display(Name = "Recordarme")]
        public bool RememberMe { get; set; }

        public string? ReturnUrl { get; set; }
    }
}
