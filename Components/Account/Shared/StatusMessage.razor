@if (!string.IsNullOrEmpty(DisplayMessage))
{
    var isError = DisplayMessage.StartsWith("Error");
    var alertClass = isError ? "status-alert-error" : "status-alert-success";
    var borderColor = isError ? "var(--mud-palette-error)" : "var(--mud-palette-success)";
    var bgColor = isError ? "rgba(244, 67, 54, 0.1)" : "rgba(76, 175, 80, 0.1)";

    <div class="status-alert @alertClass mb-4" style="padding: 1rem; border-radius: 4px; background-color: @bgColor; border-left: 4px solid @borderColor;">
        @DisplayMessage
    </div>
}

@code {
    private string? messageFromCookie;

    [Parameter]
    public string? Message { get; set; }

    [CascadingParameter]
    private HttpContext? HttpContext { get; set; }

    private string? DisplayMessage => Message ?? messageFromCookie;

    protected override void OnInitialized()
    {
        if (HttpContext is not null)
        {
            messageFromCookie = HttpContext.Request.Cookies[IdentityRedirectManager.StatusCookieName];

            if (messageFromCookie is not null)
            {
                HttpContext.Response.Cookies.Delete(IdentityRedirectManager.StatusCookieName);
            }
        }
    }
}
