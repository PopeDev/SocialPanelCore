@inject NavigationManager NavigationManager

<MudNavMenu>
    <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Dashboard">Dashboard</MudNavLink>

    <MudNavGroup Title="Gestión" Icon="@Icons.Material.Filled.Settings" Expanded="true">
        <MudNavLink Href="/accounts" Icon="@Icons.Material.Filled.Business">Cuentas</MudNavLink>
        <MudNavLink Href="/social-channels" Icon="@Icons.Material.Filled.Share">Redes Sociales</MudNavLink>

        <AuthorizeView Roles="Superadministrador">
            <MudNavLink Href="/users" Icon="@Icons.Material.Filled.People">Usuarios</MudNavLink>
        </AuthorizeView>
    </MudNavGroup>

    <MudNavGroup Title="Publicaciones" Icon="@Icons.Material.Filled.PostAdd" Expanded="true">
        <MudNavLink Href="/publications" Icon="@Icons.Material.Filled.CalendarMonth">Calendario</MudNavLink>
        <MudNavLink Href="/publications/new" Icon="@Icons.Material.Filled.Add">Nueva Publicación</MudNavLink>
    </MudNavGroup>

    <MudDivider Class="my-2" />

    <AuthorizeView>
        <Authorized>
            <MudNavLink Href="/Account/Manage" Icon="@Icons.Material.Filled.AccountCircle">Mi Perfil</MudNavLink>
            <MudNavLink OnClick="@LogoutClick" Icon="@Icons.Material.Filled.Logout">Cerrar Sesión</MudNavLink>
        </Authorized>
        <NotAuthorized>
            <MudNavLink Href="/Account/Login" Icon="@Icons.Material.Filled.Login">Iniciar Sesión</MudNavLink>
            <MudNavLink Href="/Account/Register" Icon="@Icons.Material.Filled.PersonAdd">Registrarse</MudNavLink>
        </NotAuthorized>
    </AuthorizeView>
</MudNavMenu>

@code {
    private void LogoutClick()
    {
        NavigationManager.NavigateTo("/Account/Logout", forceLoad: true);
    }
}

